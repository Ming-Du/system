<?xml version="1.0"?>
<launch>
  <arg name="camera_device" default="/dev/video1" />
  <arg name="config_path" default="$(find config)/vehicle"/>
  <arg name="sensor_meta"
    default="$(arg config_path)/sensor/calibrated_sensor.pb.txt" />
  <arg name="pixel_format" default="yuyv" />
  <!--<arg name="pixel_format" default="mjpeg" />-->
  <arg name="frame_id" default="6mm_front" />

  <group ns="sensor/camera/6mm">
    <node name="drivers_camera_6mm" pkg="drivers_camera"
        type="drivers_camera_node" output="screen" 
        args="--sensor_meta_path=$(arg sensor_meta)" >
      <param name="video_device" value="$(arg camera_device)" />
      <param name="image_width" value="1280" />
      <param name="image_height" value="720" />
      <param name="framerate" value="25"/>
      <param name="pixel_format" value="$(arg pixel_format)" />
      <param name="camera_frame_id" value="$(arg frame_id)" />
      <param name="io_method" value="mmap"/>
    </node>
  </group>

</launch>
