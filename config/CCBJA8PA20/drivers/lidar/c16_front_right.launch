<?xml version="1.0"?>
<launch>
  <arg name="config_path" default="$(find config)/vehicle"/>
  <arg name="sensor_meta"
    default="$(arg config_path)/sensor/WEYA8PA20_SENSOR.pb.txt" />

  <arg name="device_ip" default="192.168.8.202" />
  <arg name="msop_port" default="2372" />
  <arg name="difop_port" default="2373" />
  <arg name="return_mode" default="1" />

  <arg name="frame_id" default="c16_front_right" />
  <arg name="base_frame_id" default="base_link" />

  <group ns="sensor/lidar/c16/front_right">
  <!-- driver -->
  <node name="c16_front_right_driver" 
      pkg="drivers_lslidar" type="lslidar_c16_driver_node" 
      respawn="true" respawn_delay="10" output="screen">
    <param name="output_packets_topic" value="packets" />
    <param name="output_difop_topic" value="difop" />
    <!-- device address -->
    <param name="device_ip" value="$(arg device_ip)" />
    <param name="msop_port" value="$(arg msop_port)" />
    <param name="difop_port" value="$(arg difop_port)" />
    <!-- frame id -->
    <param name="frame_id" value="c16_front_right"/>
    <!-- parameter -->
    <param name="add_multicast" value="false"/>
    <param name="group_ip" value="224.1.1.2"/>
    <param name="rpm" value="600"/>
    <param name="return_mode" value="$(arg return_mode)"/>
    <param name="time_synchronization" value="false"/>
  </node>

  <!-- decoder -->
  <node name="c16_front_right_decoder" respawn="true" respawn_delay="10" output="screen"
      pkg="drivers_lslidar" type="lslidar_c16_decoder_node" 
      args="--stderrthreshold=0
            --sensor_meta_path=$(arg sensor_meta)" >

    <param name="frame_id" value="$(arg frame_id)" />
    <param name="base_frame_id" value="$(arg base_frame_id)" />

    <param name="input_packets_topic" value="packets" />
    <param name="input_difop_topic" value="difop" />
    <!-- distance -->
    <param name="min_distance" value="0.2"/>
    <param name="max_distance" value="150.0"/>
    <!-- angle from behind clockwise -->
    <param name="scan_start_angle" value="6000.0"/>
    <param name="scan_end_angle" value="28000.0"/>
    <!-- parameter -->
    <param name="config_vert" value="true"/>
    <param name="print_vert" value="false"/>
    <param name="return_mode" value="$(arg return_mode)"/>
    <param name="config_vert_file" value="false"/>
    <param name="distance_unit" value="0.25"/>
    <param name="time_synchronization" value="false"/>
  </node>
  </group>

</launch>
